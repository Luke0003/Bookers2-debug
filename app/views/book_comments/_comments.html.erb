<table>
  <tbody>
    <% book_comments.each do |comment| %>
      <tr>
        <td>
          <%= link_to user_path(comment.user_id) do %>
            <%= image_tag comment.user.get_profile_image, size:"100x100" %><br>
            <%= comment.user.name %>
          <% end %>
        </td>
        <td><%= comment.comment %></td>
        <td>
          <% if comment.user == current_user %>
            <%= link_to 'Destroy', book_book_comment_path(comment.book_id, comment.id) , method: :delete, class: "btn btn-danger btn-sm", remote: true %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= form_with model: [@book, @book_comment], local: false do |f| %>
  <div class="form-group">
    <%= f.text_area :comment, class: "form-control", rows: "5" %>
  </div>
  <div class="form-group">
    <%= f.submit "送信" %>
  </div>
<% end %>